h1, h2, h3, h4, h5, h6, .ui-post-title a, .header-wrapper .header-right-wrap .nav .nav-item a, .header-wrapper .title a
  font-family 'PT Serif', 'Noto Serif SC', serif;

.content-wrapper .vuepress-blog-theme-content
  font-family 'PingFang SC', 'Microsoft YaHei', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif
  font-size 18px

.content-wrapper a
  text-decoration none
  &:hover
    text-decoration none !important

.vuepress-blog-theme-content sup a
  margin-top: calc(0.5rem - 80px);
  padding-top: calc(80px + 1rem);
  margin-bottom: 0;

.post-tag
  font-size 16px
  line-height 1.7

p, ul, ol
  line-height 2

.ui-post .ui-post-title a:hover
  text-decoration none

table
  display table
  margin-left auto
  margin-right auto

tr
  &:nth-child(2n)
    background-color #fff

.center-text
  text-align center

.italic
  font-style italic

.center-image
  display block
  margin-left auto
  margin-right auto